{
  "name": "tridyme-cli",
  "version": "0.0.6",
  "description": "CLI pour créer et gérer des applications TriDyme avec déploiement CI/CD automatique (accès GitLab privé requis)",
  "main": "index.js",
  "bin": {
    "tridyme": "./index.js"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "build": "echo 'No build step required'",
    "prepublishOnly": "npm run lint && npm run test",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "tridyme",
    "cli",
    "webapp",
    "sdk",
    "python",
    "react",
    "cicd",
    "git",
    "deployment",
    "automation"
  ],
  "author": "TriDyme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tridyme/tridyme-cli.git"
  },
  "bugs": {
    "url": "https://github.com/tridyme/tridyme-cli/issues"
  },
  "homepage": "https://github.com/tridyme/tridyme-cli#readme",
  "dependencies": {
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "preferGlobal": true,
  "files": [
    "index.js",
    "deploy.js",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!coverage/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "node/no-unpublished-require": "off",
      "node/no-missing-require": "off"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}